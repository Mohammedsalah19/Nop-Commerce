@model ChangePasswordModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
    //page class
    Html.AppendPageCssClassParts("html-account-page");
    Html.AppendPageCssClassParts("html-change-password-page");
}
@section left
{
    @Html.Action("CustomerNavigation", "Customer", new { selectedTabId = CustomerNavigationEnum.ChangePassword })
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page account-page change-password-page">
        <div class="page-title panel-heading">
            <h1>@T("Account.MyAccount") - @T("Account.ChangePassword")</h1>
        </div>
        <div class="page-body">
            <div class="message-error">
                @Html.ValidationSummary(true)
            </div>
            @if (!String.IsNullOrEmpty(Model.Result))
            {
                <div class="alert alert-success">
                    @Model.Result
                </div>
            }
            @{
                 var validationSummary = Html.ValidationSummary(true);
            }
            @if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
            {
                <div class="message-error">@validationSummary</div>
            }
            <div class="fieldset form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.OldPassword, new { @class = "control-label col-sm-3 col-md-2" })
                    <div class="visible-xs form-title-rquired">@Html.RequiredHint()</div>
                    <div class="col-sm-6 col-md-4">
                        @Html.EditorFor(model => model.OldPassword, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-3 col-md-4">
                        <div class="visible-lg visible-md visible-sm form-title-rquired">@Html.RequiredHint()</div>
                        @Html.ValidationMessageFor(model => model.OldPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-sm-3 col-md-2" })
                    <div class="visible-xs form-title-rquired">@Html.RequiredHint()</div>
                    <div class="col-sm-6 col-md-4">
                        @Html.EditorFor(model => model.NewPassword, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-3 col-md-4">
                        <div class="visible-lg visible-md visible-sm form-title-rquired">@Html.RequiredHint()</div>
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmNewPassword, new { @class = "control-label col-sm-3 col-md-2" })
                    <div class="visible-xs form-title-rquired">@Html.RequiredHint()</div>
                    <div class="col-sm-6 col-md-4">
                        @Html.EditorFor(model => model.ConfirmNewPassword, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-3 col-md-4">
                        <div class="visible-lg visible-md visible-sm form-title-rquired">@Html.RequiredHint()</div>
                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-md-offset-2 col-md-3">
                        <input type="submit" class="btn btn-primary change-password-button" value="@T("Account.ChangePassword.Button")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
