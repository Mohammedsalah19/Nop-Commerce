@model ShoppingCartModel.GiftCardBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{
    <div class="giftcard-box">
        <div class="title">
            <strong>@T("ShoppingCart.GiftCardCouponCode")</strong>
        </div>
        <div class="cart-box-wrapper">
            <div class="hint">@T("ShoppingCart.GiftCardCouponCode.Tooltip")</div>
            <input name="giftcardcouponcode" id="giftcardcouponcode" type="text" class="gift-card-coupon-code form-control" />&nbsp;
            <div class="giftcard-button">
                <input type="submit" name="applygiftcardcouponcode" id="applygiftcardcouponcode" value="@T("ShoppingCart.GiftCardCouponCode.Button")" class="btn btn-default apply-gift-card-coupon-code-button" />
            </div>
            @if (!String.IsNullOrEmpty(Model.Message))
            {
                <div class="message bg-danger">
                    @Model.Message
                </div>
            }
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#giftcardcouponcode').keydown(function (event) {
                if (event.keyCode == 13) {
                    $('#applygiftcardcouponcode').click();
                    return false;
                }
            });
        });
    </script>
}   