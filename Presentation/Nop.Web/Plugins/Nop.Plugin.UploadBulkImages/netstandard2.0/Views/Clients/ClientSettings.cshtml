@using Nop.Web.Framework
@using Nop.Plugin.Api.Models

@model ClientModel
<div class="content">
    <div class="form-horizontal">

        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Name)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.ClientId)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.ClientId)
                            @Html.ValidationMessageFor(model => model.ClientId)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.ClientSecret)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.ClientSecret)
                            @Html.ValidationMessageFor(model => model.ClientSecret)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.CallbackUrl)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.CallbackUrl)
                            @Html.ValidationMessageFor(model => model.CallbackUrl)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.IsActive)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.IsActive)
                            @Html.ValidationMessageFor(model => model.IsActive)
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

